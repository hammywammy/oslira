// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",                   // whatever runtime you target
    "module": "ESNext",                   // or "CommonJS" if you’re using require()
    "moduleResolution": "Node",
    "strict": true,                       // turn on all strict‑mode checks
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",                     // compiled output dir
    "rootDir": "src",                     // your TS source root
    "resolveJsonModule": true,
    "allowJs": true,                      // if you mix .js + .ts
    "typeRoots": [
      "./node_modules/@types",
      "./"                                // so env.d.ts (in project root) is picked up
    ]
  },
  "include": [
    "src",     // or wherever your .ts/.js files live
    "env.d.ts" // if you’re using the ambient-process-env declaration
  ],
  "exclude": ["node_modules", "dist"]
}
